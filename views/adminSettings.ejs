<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Edit Info</title>
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="./css/output.css">
    <link rel="icon" sizes="325x325" href="https://admin.saveneed.com/images/favicon.png">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="icon" sizes="325x325" href="https://admin.saveneed.com/images/favicon.png">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
      /* Tab styles */


      .tab-header {
        display: flex;
        border-bottom: 1px solid #e5e7eb;
        margin-bottom: 1.5rem;
      }

      .tab-button {
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        color: #6b7280;
        border-bottom: 2px solid transparent;
        transition: all 0.2s ease;
      }

      .tab-button:hover {
        color: #374151;
        border-bottom-color: #d1d5db;
      }

      .tab-button.active {
        color: #3b82f6;
        border-bottom-color: #3b82f6;
      }

      .tab-content {
        display: none;
      }

      .tab-content.active {
        display: block;
      }
    </style>
  </head>

  <body class="font-sans bg-gray-100">
    <section class="bg-white max-w-[1920px] mx-auto">
      <!-- Navigation Menu -->
      <%- include('header') %>

      <div class="ml-auto w-full xl:w-5/6 px-0 xl:px-1 py-2 mt-16 xl:mt-0">
        <div class="flex items-center justify-between px-5 py-2 xl:py-5 gap-4 border-b bg-white">
          <!-- Search Box -->
          <div class="bg-white relative">
            <input class="py-2 pr-3 pl-6 focus:outline-none max-w-[180px]" type="text" placeholder="Search...">
            <i class="fa-solid fa-magnifying-glass absolute top-1/2 left-0 -translate-y-1/2 text-gray-400"></i>
          </div>

          <!-- Notification & User -->
          <%- include('profileBar') %>
        </div>
        <div
          class="max-w-xs mx-auto bg-white rounded-xl shadow-md overflow-hidden p-6 hover:shadow-lg transition-shadow duration-300">
          <div class="text-center">
            <!-- Profile Image -->
            <div class="relative mx-auto w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg">
              <img src="<%= admin?.profile_pic %>" alt="Sarah Smith"
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">

            </div>

            <!-- Profile Info -->
            <div class="mt-4">
              <h3 class="text-2xl font-bold text-gray-800"><%= admin?.admin_name %></h3>
              <p class="text-blue-600 font-medium"><%= admin?.designation %></p>

            </div>


          </div>
        </div>
        <div class="container mx-auto my-10 w-4/5">
          <h1 class="text-3xl font-bold mb-6">Admin Profile</h1>

          <!-- Tab Navigation -->
          <div class="tab-header">
            <button class="tab-button active" data-tab="admin-info">Admin Info</button>
            <button class="tab-button" data-tab="bank-info">Bank Info</button>
            <button class="tab-button" data-tab="documents">Documents</button>
          </div>

          <!-- Admin Info Tab -->
          <div id="admin-info" class="tab-content active">
            <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
              <div class="bg-gradient-to-r from-primary-50 to-secondary-50 px-6 py-4 border-b">
                <h2 class="text-xl font-semibold text-gray-700 flex items-center">
                  <i class="fas fa-user-tie mr-3 text-primary-500"></i>
                  Admin Information
                </h2>
              </div>
              <div class="p-6">
                <form id="form" action="/adminSettings" method="POST">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email <span
                          class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="email" id="email" name="email" value="<%= admin.admin_email %>" required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>

                    <div>
                      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name <span
                          class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="text" id="name" name="name" value="<%= admin.admin_name %>" required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i class="fas fa-user absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>

                    <% if(admin.is_super_admin) { %>
                    <div>
                      <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password <span
                          class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="password" id="password" value="<%= admin.admin_pass %>" name="password" required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        <button type="button"
                          class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none">
                          <i id="pass_icon" class="fas fa-eye toggle-password"></i>
                        </button>
                      </div>
                    </div>
                    <% } %>
                  </div>
                  <div class="flex justify-end mt-6">
                    <button type="submit"
                      class="bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Bank Info Tab -->
          <div id="bank-info" class="tab-content">
            <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
              <div class="bg-gradient-to-r from-primary-50 to-secondary-50 px-6 py-4 border-b">
                <h2 class="text-xl font-semibold text-gray-700 flex items-center">
                  <i class="fas fa-university mr-3 text-primary-500"></i>
                  Bank Information
                </h2>
              </div>
              <div class="p-6">
                <form id="adminSettingsBankInfo" action="/adminSettingsBankInfo" method="POST">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <label for="bank_name" class="block text-sm font-medium text-gray-700 mb-1">Bank Name <span
                          class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="text" id="bank_name" name="bank_name" value="<%= bankInfo[0]?.bank_name %>"
                          required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i class="fas fa-landmark absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>

                    <div>
                      <label for="routing_number" class="block text-sm font-medium text-gray-700 mb-1">Routing Number
                        <span class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="text" id="routing_number" name="routing_number"
                          value="<%= bankInfo[0]?.routing_number %>" required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i
                          class="fas fa-sort-numeric-up absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>

                    <div>
                      <label for="branch_name" class="block text-sm font-medium text-gray-700 mb-1">Branch Name <span
                          class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="text" id="branch_name" name="branch_name" value="<%= bankInfo[0]?.branch_name %>"
                          required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i
                          class="fas fa-code-branch absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>

                    <div>
                      <label for="account_name" class="block text-sm font-medium text-gray-700 mb-1">Account Holder Name
                        <span class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="text" id="account_name" name="account_name"
                          value="<%= bankInfo[0]?.account_name %>" required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i class="fas fa-user-tie absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>

                    <div>
                      <label for="account_number" class="block text-sm font-medium text-gray-700 mb-1">Account Number
                        <span class="text-red-500">*</span></label>
                      <div class="relative">
                        <input type="text" id="account_number" name="account_number"
                          value="<%= bankInfo[0]?.account_number %>" required
                          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <i
                          class="fas fa-credit-card absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                    </div>
                  </div>
                  <div class="flex justify-end mt-6">
                    <button type="submit"
                      class="bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Documents Tab -->
          <div id="documents" class="tab-content">
            <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
              <div class="bg-gradient-to-r from-primary-50 to-secondary-50 px-6 py-4 border-b">
                <h2 class="text-xl font-semibold text-gray-700 flex items-center">
                  <i class="fas fa-file-alt mr-3 text-primary-500"></i>
                  Documents
                </h2>
              </div>
              <div class="p-6">

                <div class="grid grid-cols-1 gap-6">
                  <form id="adminSettingsDocuments" action="/adminSettingsDocuments" method="POST"
                    enctype="multipart/form-data" class="space-y-6 bg-white p-6 rounded-xl shadow-md">
                    <div class="space-y-4">
                      <h2 class="text-xl font-semibold text-gray-800">Profile Picture</h2>

                      <div class="flex flex-col sm:flex-row items-center gap-6">
                        <!-- Profile Picture Preview -->
                        <div class="relative group">
                          <% if (admin.profile_pic) { %>
                          <img src="<%= admin.profile_pic %>" alt="Profile Picture"
                            class="w-24 h-24 rounded-full object-cover shadow-sm border-2 border-white ring-2 ring-blue-100">
                          <% } else { %>
                          <div
                            class="w-24 h-24 rounded-full bg-gray-100 flex items-center justify-center shadow-sm border-2 border-white ring-2 ring-blue-100">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-400" fill="none"
                              viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                          </div>
                          <% } %>
                          <div
                            class="absolute inset-0 bg-black bg-opacity-20 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none"
                              viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                          </div>
                        </div>

                        <!-- File Upload Section -->
                        <div class="flex-1 w-full">
                          <label for="profile_pic" class="block text-sm font-medium text-gray-700 mb-2">Upload New
                            Photo</label>

                          <div
                            class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-blue-400 transition-colors duration-200">
                            <div class="space-y-1 text-center">
                              <svg class="mx-auto h-10 w-10 text-gray-400" stroke="currentColor" fill="none"
                                viewBox="0 0 48 48" aria-hidden="true">
                                <path
                                  d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02"
                                  stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                              </svg>
                              <div class="flex flex-col items-center text-sm text-gray-600">
                                <label for="profile_pic"
                                  class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                                  <span>Select an image</span>
                                  <input id="profile_pic" name="profile_pic" type="file" class="sr-only"
                                    accept="image/*" onchange="previewImage(this)">
                                </label>
                                <p class="text-xs text-gray-500 mt-1">or drag and drop here</p>
                              </div>
                              <p class="text-xs text-gray-500">PNG, JPG, GIF up to 5MB</p>
                            </div>
                          </div>

                          <div id="file-info" class="mt-2 text-sm text-gray-600 hidden">
                            <span id="file-name" class="font-medium"></span>
                            <button type="button" onclick="clearFile()" class="ml-2 text-red-500 hover:text-red-700">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path fill-rule="evenodd"
                                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                  clip-rule="evenodd" />
                              </svg>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="flex justify-end pt-2">
                      <button type="submit"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150">
                        <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none"
                          viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Update Profile
                      </button>
                    </div>
                  </form>


                  <div>
                    <!-- <label class="block text-sm font-medium text-gray-700 mb-2">Passport Document</label> -->
                    <div>
                      <!-- <% if (admin?.passport_pdf) { %>
                        <div class="mb-3">
                          <a href="<%= admin.passport_pdf %>" target="_blank"
                            class="text-blue-600 hover:text-blue-800 text-sm flex items-center">
                            <i class="fas fa-file-pdf mr-2 text-red-500"></i> View Current Passport
                          </a>
                        </div>
                        <% } %> -->

                      <form id="adminSettingsDocuments" action="/adminDocuments" method="POST"
                        enctype="multipart/form-data" class="space-y-6 bg-white p-6 rounded-xl shadow-md">
                        <div class="space-y-4">
                          <h2 class="text-xl font-semibold text-gray-800">Document Upload</h2>

                          <!-- Title Input -->
                          <div class="relative">
                            <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Document
                              Title</label>
                            <div class="relative">
                              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none"
                                  viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                              </div>

                              <input type="text" id="title" name="title" required
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400"
                                placeholder="Enter document title">
                              <input type="hidden" name="doc_type" value="<%= adminId %>">
                            </div>
                          </div>

                          <!-- File Upload -->
                          <div class="relative">
                            <label for="files" class="block text-sm font-medium text-gray-700 mb-1">Select
                              Document</label>
                            <div
                              class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-blue-400 transition-colors duration-200"
                              id="dropzone">
                              <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none"
                                  viewBox="0 0 48 48" aria-hidden="true">
                                  <path
                                    d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02"
                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="flex flex-col items-center text-sm text-gray-600">
                                  <label for="files"
                                    class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                                    <span>Upload a file</span>
                                    <input id="files" name="files" type="file" class="sr-only"
                                      onchange="showFileName(this)">
                                  </label>
                                  <p class="text-xs text-gray-500 mt-1">or drag and drop here</p>
                                </div>
                                <div id="file-name"
                                  class="mt-2 text-sm font-medium text-gray-700 truncate max-w-xs mx-auto hidden">
                                  <span id="name-text"></span>
                                  <button type="button" onclick="clearFile()"
                                    class="ml-2 text-red-500 hover:text-red-700">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20"
                                      fill="currentColor">
                                      <path fill-rule="evenodd"
                                        d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                        clip-rule="evenodd" />
                                    </svg>
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>


                        </div>

                        <div class="flex justify-end">
                          <button type="submit"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150">
                            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none"
                              viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            Upload Document
                          </button>
                        </div>
                      </form>

                    </div>
                  </div>
                </div>



                <div id="documents" role="tabpanel"
                  class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100">
                  <!-- Documents Table Header -->
                  <div class="bg-gradient-to-r from-blue-50 to-cyan-50 px-6 py-4 border-b">
                    <h2 class="text-xl font-semibold text-gray-700 flex items-center">
                      <i class="fas fa-file-alt mr-3 text-blue-500"></i>
                      Documents
                    </h2>
                  </div>

                  <div class="overflow-x-auto p-6">
                    <table class="min-w-full divide-y divide-gray-200">
                      <thead class="bg-gray-50">
                        <tr>
                          <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <div class="flex items-center">
                              <i class="fas fa-file-signature mr-2"></i>
                              Document
                            </div>
                          </th>
                          <th scope="col"
                            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <div class="flex items-center">
                              <i class="fas fa-calendar-alt mr-2"></i>
                              Upload Date
                            </div>
                          </th>
                          <th scope="col"
                            class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <div class="flex items-center justify-end">
                              <i class="fas fa-cog mr-2"></i>
                              Actions
                            </div>
                          </th>
                        </tr>
                      </thead>
                      <tbody class="bg-white divide-y divide-gray-200">
